<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          tools:context=".MapsActivity"
    >




    <Button
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick_Filter"
        android:background="@drawable/roundedbutton"
        android:text="Filter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fff813"
        android:singleLine="false"

        />


    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_action"
        android:background="@drawable/circle"
        android:id="@+id/imageButton"
        android:layout_gravity="right|bottom"
        android:layout_toLeftOf="@+id/btnFilter"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/map"
        android:onClick="imageButtonOnclick"/>

    <fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.MapFragment"
    android:layout_below="@+id/btnFilter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout="@layout/abc_action_bar_title_item"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pick Up Sports"
        android:id="@+id/textView"
        android:layout_above="@+id/map"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:paddingLeft="20dp"
        android:clickable="false"
        android:enabled="false"
        android:background="@android:color/transparent"
        android:layout_toStartOf="@+id/imageButton"
        android:paddingTop="5dp"
        android:layout_toLeftOf="@+id/imageButton"
        android:textColor="#2683ff"/>



</RelativeLayout>
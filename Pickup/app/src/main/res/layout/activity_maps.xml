<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity"
    >
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/abc_action_bar_title_item"/>

    <TextView
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="PickUp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:paddingLeft="20dp"
        android:clickable="false"
        android:enabled="false"
        android:background="@color/transparentWhite"
        android:paddingTop="5dp"
        android:textColor="@color/dark_grey"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnFilter"
        android:layout_toStartOf="@+id/btnFilter"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="60dp"
        android:gravity="center_horizontal"
        />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/add_icon"
        android:background="@drawable/circle"
        android:id="@+id/imageButton"
        android:layout_gravity="right"
        android:onClick="onClick_ImageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick_Filter"
        android:background="@drawable/roundedbutton"
        android:text="Filter"
        android:textColor="#FFFFFF"
        android:singleLine="false"
        android:layout_gravity="right"
        android:layout_above="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchFriend"
        android:background="@drawable/roundedwhitebutton"
        android:textSize="18dp"
        android:clickable="false"
        android:textColor="@color/dark_grey"
        android:hint="@string/hintSearch"
        android:gravity="left|center_vertical"
        android:inputType="text"
        android:lines="1"
        android:maxLength="40"
        android:paddingLeft="10dp"
        android:layout_below="@+id/btnFilter"
        android:layout_marginLeft="60dp"
        android:layout_toLeftOf="@+id/search"
        android:layout_toStartOf="@+id/search"
        android:onClick="onClick_Search"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedwhitebutton"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:gravity="center_horizontal"
        android:id="@+id/search"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/searchFriend"
        android:layout_alignBottom="@+id/searchFriend"
        android:paddingLeft="10dp"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/bkgnd_image_width"
            android:layout_height="@dimen/bkgnd_image_height"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:id="@+id/create_event_image_view1"
            android:src="@drawable/logo"/>

        <EditText
            android:id="@+id/event_name"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:hint="Event Name"
            android:textColor="@color/orange"
            android:textSize="@dimen/edittext_text"
            android:inputType="text" >
            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/sport_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:layout_gravity="center"
            android:textColor="@color/orange"
            android:drawSelectorOnTop="true"
            android:prompt="@string/prompt" />

        <EditText
            android:id="@+id/event_location"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:hint="Location"
            android:textColor="@color/orange"
            android:textSize="@dimen/edittext_text"
            android:inputType="text" >
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/event_date"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:gravity="center_horizontal"
            android:ems="10"
            android:textColor="@color/orange"
            android:textSize="@dimen/edittext_text"
            android:hint="@string/event_date_text" />


        <EditText
            android:id="@+id/event_time"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:ems="10"
            android:textColor="@color/orange"
            android:textSize="@dimen/edittext_text"
            android:hint="@string/event_time_text" />

        <csulb.edu.pickup.NoDefaultSpinner
            android:id="@+id/event_gender_spinner"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:layout_gravity="center" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin" >
            <TableRow
                android:id="@+id/eventTableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <csulb.edu.pickup.NoDefaultSpinner
                    android:id="@+id/age_min_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/edittext_text"/>

                <csulb.edu.pickup.NoDefaultSpinner
                    android:id="@+id/age_max_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/edittext_text"/>
            </TableRow>
        </TableLayout>

        <csulb.edu.pickup.NoDefaultSpinner
            android:id="@+id/max_num_ppl_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/edittext_text"/>

        <csulb.edu.pickup.NoDefaultSpinner
            android:id="@+id/min_user_rating_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:layout_gravity="center"
            android:textColor="@color/orange"
            android:textSize="@dimen/edittext_text"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/event_create_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_event_btn_txt"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/event_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
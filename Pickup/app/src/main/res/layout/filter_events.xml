<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/eventTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Filter Events:"
            android:textSize="20dp"
            android:layout_weight=".99"
            android:textStyle="bold"
            android:gravity="center" />
        <EditText
            android:id="@+id/event_location"
            android:layout_margin="10dp"
            android:background="@drawable/roundedwhitebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:ems="17"
            android:hint="Location"
            android:gravity="center"
            android:textColor="@color/sky_blue"
            android:inputType="text" >
            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/event_name"
            android:layout_margin="10dp"
            android:background="@drawable/roundedwhitebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:ems="17"
            android:hint="Event Name"
            android:gravity="center"
            android:textColor="@color/sky_blue"
            android:inputType="text" >
            <requestFocus />
        </EditText>

        <EditText
            android:layout_margin="10dp"
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/roundedwhitebutton"
            android:layout_marginBottom="@dimen/event_table_margin"
            android:ems="17"
            android:hint="Event Creator"
            android:gravity="center"
            android:textColor="@color/sky_blue"
            android:inputType="text" >
            <requestFocus />
        </EditText>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin" >

            <TableRow
                android:id="@+id/eventTableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/eventTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/event_sport_text"
                    android:textColor="@color/grey"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Spinner
                    android:id="@+id/sport_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:prompt="@string/prompt"
                    android:background="@drawable/roundedwhitebutton"
                    />

            </TableRow>
        </TableLayout>


        <TextView
            android:id="@+id/eventTextView4b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_event"
            android:textColor="@color/grey"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin" >
            <TableRow
                android:id="@+id/eventTableRow5"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/eventTextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/between"
                    android:textColor="@color/grey"
                    android:textSize="13dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/event_date1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/sky_blue"
                    android:background="@drawable/roundedwhitebutton"
                    android:hint="@string/date_format" />
            </TableRow>
            <TableRow
                android:id="@+id/eventTableRow5b"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/eventTextView5b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" and"
                    android:textColor="@color/grey"

                    android:textSize="13dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <EditText
                    android:id="@+id/event_date2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sky_blue"
                    android:gravity="center"
                    android:background="@drawable/roundedwhitebutton"
                    android:hint="@string/date_format" />
        </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/eventTextViewFilterTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_event"
            android:textColor="@color/grey"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin" >
            <TableRow
                android:id="@+id/filterTableRow2"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/filterTextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/between"
                    android:textColor="@color/grey"
                    android:textSize="13dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/event_time1"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sky_blue"
                    android:background="@drawable/roundedwhitebutton"
                    android:hint="@string/time_format" />
                </TableRow>
            <TableRow
                android:id="@+id/filterTableRow2b"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/eventTextView6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" and"
                    android:textColor="@color/grey"
                    android:textSize="13dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <EditText
                    android:id="@+id/event_time2"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sky_blue"
                    android:background="@drawable/roundedwhitebutton"
                    android:hint="@string/time_format" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin" >

            <TextView
                android:id="@+id/eventTextView6a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="@string/date_created"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/event_table_margin"
                android:layout_marginBottom="@dimen/event_table_margin" >
                <TableRow
                    android:id="@+id/eventTableRow6a"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/eventTextView6c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/between"
                        android:textSize="13dp"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <EditText
                        android:id="@+id/event_date_created_1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/sky_blue"
                        android:background="@drawable/roundedwhitebutton"
                        android:hint="@string/date_format" />
                </TableRow>
                <TableRow
                    android:id="@+id/eventTableRow6b"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/eventTextView6d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" and"
                        android:textColor="@color/grey"

                        android:textSize="13dp"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    <EditText
                        android:id="@+id/event_date_created_2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/sky_blue"
                        android:background="@drawable/roundedwhitebutton"
                        android:hint="@string/date_format" />
                </TableRow>
            </TableLayout>
            <TextView
                android:id="@+id/eventTextView7b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="@string/age_range"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/event_table_margin"
                android:layout_marginBottom="@dimen/event_table_margin" >
                <TableRow
                    android:id="@+id/eventTableRow7a"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >



                    <Spinner
                        android:id="@+id/age_min_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sky_blue"
                        android:background="@drawable/roundedwhitebutton"
                        />
                    <TextView
                        android:id="@+id/eventTextView7c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  to "
                        android:textColor="@color/grey"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    <Spinner
                        android:id="@+id/age_max_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sky_blue"
                        android:background="@drawable/roundedwhitebutton"
                        />

                </TableRow>
            </TableLayout>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin" >
            <TableRow
                android:id="@+id/eventTableRow7"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/eventTextView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColor="@color/grey"
                    android:text="@string/event_gender_text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sky_blue"
                    android:background="@drawable/roundedwhitebutton"
                    />
            </TableRow>
        </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_table_margin"
            android:layout_marginBottom="@dimen/event_table_margin">
            <TableRow
                android:id="@+id/eventTableRow10"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/eventTextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/event_min_user_rating_text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey"
                     />

                <Spinner
                    android:id="@+id/min_user_rating_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sky_blue"
                    android:background="@drawable/roundedwhitebutton"
                    />

            </TableRow>
            <TableRow
                android:id="@+id/eventTableRow11"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/open_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="@string/open_events" />
            </TableRow>
        </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center">



            <Button
                android:id="@+id/event_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/grey"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />
            <Button
                android:id="@+id/filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textColor="@color/grey"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
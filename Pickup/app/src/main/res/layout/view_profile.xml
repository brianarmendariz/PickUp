<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userprofilebg"
    tools:context=".UserProfileActivity">



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="false"
        android:id="@+id/imageView"
        android:src="@drawable/browse"
        android:background="@drawable/rounded_transparent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:onClick="onClick"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NameTextView"
        android:text="Name:"
        android:textColor="#FFFF00"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/NameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/NameEditText"
        android:layout_toStartOf="@+id/NameEditText"
        android:layout_alignTop="@+id/NameEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AgeTextView"
        android:text="Age:"
        android:textColor="#FFFF00"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/AgeEditText"
        android:layout_toStartOf="@+id/AgeEditText"
        android:layout_alignTop="@+id/AgeEditText"
        android:layout_alignBottom="@+id/AgeEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GenderTextView"
        android:text="Gender:"
        android:textColor="#FFFF00"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/GenderEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/GenderEditText"
        android:layout_toStartOf="@+id/GenderEditText"
        android:layout_alignTop="@+id/GenderEditText"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GenderEditText"
        android:textColor="#181818"
        android:background="@drawable/roundedwhitebutton"
        android:maxLines="1"
        android:hint="M/F"
        android:gravity="center_horizontal"
        android:layout_below="@+id/AgeTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/AgeTextView"
        android:layout_toEndOf="@+id/AgeTextView"
        android:layout_marginTop="30dp"
        android:maxLength="1"/>

    <EditText

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NameEditText"
        android:textColor="#181818"
        android:background="@drawable/roundedwhitebutton"
        android:maxLines="1"
        android:maxLength="30"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/AgeTextView"
        android:layout_toEndOf="@+id/AgeTextView"
        android:gravity="center_horizontal">

    </EditText>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AgeEditText"
        android:textColor="#181818"
        android:background="@drawable/roundedwhitebutton"
        android:maxLength="3"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:layout_below="@+id/NameEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/SaveButton"
        android:background="@drawable/roundedbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:textStyle="bold"
        android:textColor="#FFFF00"/>

</RelativeLayout>
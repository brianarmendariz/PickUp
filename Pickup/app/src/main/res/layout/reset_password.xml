<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventLinearLayout1"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            >

            <TextView
                android:id="@+id/eventTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_rest_label"
                android:textColor="@color/orange"
                android:textSize="30dp"
                android:layout_weight=".99"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >


            <TableRow
                android:id="@+id/createAccountTableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center">




                <EditText
                    android:id="@+id/old_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:textColor="@color/orange"
                    android:scrollHorizontally="true"
                    android:fadeScrollbars="false"
                    android:scrollbars="horizontal"
                    android:inputType="textPassword"
                    android:hint="@string/old_text"
                    android:textSize="25dp"
                    >
                    <requestFocus />
                </EditText
                    >
            </TableRow>
            <TableRow
                android:id="@+id/createAcountTableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center">


                <EditText
                    android:id="@+id/new_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:textColor="@color/orange"
                    android:scrollHorizontally="true"
                    android:fadeScrollbars="false"
                    android:scrollbars="horizontal"
                    android:inputType="textPassword"
                    android:hint="@string/new_text"
                    android:textSize="25dp"
                    >
                    <requestFocus />
                </EditText>
            </TableRow>

            <TableRow
                android:id="@+id/createAccountTableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center">



                <EditText
                    android:id="@+id/retype_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:textColor="@color/orange"
                    android:scrollHorizontally="true"
                    android:fadeScrollbars="false"
                    android:scrollbars="horizontal"
                    android:inputType="textPassword"
                    android:hint="@string/retype_text"
                    android:textSize="25dp">
                    <requestFocus />
                </EditText>
            </TableRow>


        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/save_btn"
                    android:text="@string/save_settings_btn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/orange"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_weight=".99"></Button>
                <Button
                    android:id="@+id/cancel_btn"
                    android:text="@string/cancel_btn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/orange"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_weight=".99"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>